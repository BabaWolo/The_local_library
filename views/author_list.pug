extends layout

block content
  h1= title

  ul
    each author in author_list
      li#list-item
        a(href=author.url) #{author.name}
        if (author.lifespan)
            |  (#{author.lifespan})
        else 
            |   (Unknown)

    else
      li There are no authors.
  
  include searchBar.pug
